{
  "name": "agriculture-app",
  "version": "1.0.0",
  "description": "React Native Agriculture App with Node.js Backend",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm run dev",
    "start": "npm run dev",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "build:client": "cd client && npm run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "cd client && rm -rf node_modules && rm -rf .expo",
    "clean:server": "cd server && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "react-native",
    "agriculture",
    "nodejs",
    "expo",
    "fullstack"
  ],
  "license": "MIT"
}
