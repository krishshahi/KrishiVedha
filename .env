# Dynamic Environment Configuration for KrishiVedha
# All values are configurable and support environment-specific overrides

# Application Configuration
APP_NAME=KrishiVedha
APP_VERSION=1.0.0
APP_DESCRIPTION=Smart Agriculture Management System
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0
SERVER_IP=auto-detect
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# API Configuration
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/krishivedha
DB_NAME=krishivedha
DB_POOL_SIZE=10
DB_TIMEOUT=5000
TEST_MONGODB_URI=mongodb://localhost:27017/krishivedha_test
TEST_DB_NAME=krishivedha_test

# Authentication Configuration
JWT_SECRET=auto-generate-secure-key
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=3600000

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
WEATHER_API_TIMEOUT=5000
AI_ENABLED=false
AI_API_URL=
AI_API_KEY=
AI_API_TIMEOUT=30000

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Feature Flags
FEATURE_WEATHER=true
FEATURE_COMMUNITY=true
FEATURE_AI=false
FEATURE_IOT=false
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# React Native Client Configuration
REACT_NATIVE_API_URL=http://192.168.1.129:3000/api

